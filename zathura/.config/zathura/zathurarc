### Configurations
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 4
set selection-clipboard clipboard
set font "monospace regular 10"
set guioptions ""

### Keybindings
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
# map K zoom in
# map J zoom out
map i recolor
map p print
map g goto top

set recolor                     "true"
# set recolor-keephue             "true"
# set render-loading              "false"

### Gruvbox-Dark Theme
set notification-error-bg       "#000000" # bg
set notification-error-fg       "#fb4934" # bright:red
set notification-warning-bg     "#000000" # bg
set notification-warning-fg     "#fabd2f" # bright:yellow
set notification-bg             "#000000" # bg
set notification-fg             "#b8bb26" # bright:green

set completion-bg               "#151515" # bg2
set completion-fg               "#eeeeee" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#83a598" # bright:blue
set completion-highlight-fg     "#151515" # bg2

### Define the colors in index mode
set index-bg                    "#151515" # bg2
set index-fg                    "#eeeeee" # fg
set index-active-bg             "#83a598" # bright:blue
set index-active-fg             "#151515" # bg2

set inputbar-bg                 "#000000" # bg
set inputbar-fg                 "#eeeeee" # fg

set statusbar-bg                "#101010" # bg2
set statusbar-fg                "#eeeeee" # fg

set highlight-color             "#fabd2f" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#000000" # bg
set default-fg                  "#eeeeee" # fg
set render-loading-bg           "#000000" # bg
set render-loading-fg           "#eeeeee" # fg

### Recolor Settings 
set recolor-lightcolor          "#101010" # bg
set recolor-darkcolor           "#eeeeee" # fg
