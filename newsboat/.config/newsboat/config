### General Settings
refresh-on-startup yes
prepopulate-query-feeds yes
max-items 1000
auto-reload yes
reload-time 30
wrap-scroll yes
show-keymap-hint no
download-retries 5
download-path "$HOME/Downloads"
player "mpv %u"
browser "elinks %u" 
itemview-title-format "'%T' (%u/%t)"
articlelist-title-format "'%T' (%u/%t)"
feedlist-title-format "Feeds (%u/%t)"

### Bindings
unbind-key j
unbind-key k
unbind-key h
unbind-key H
unbind-key L
unbind-key c
unbind-key ,

bind-key ; macro-prefix
bind-key h quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key c toggle-show-read-feeds

## Macros
# open video in mpv
macro V set browser "mpv --ytdl-format='bestvideo[height<=?720][fps<=?60]+bestaudio/best' %u" ; open-in-browser ; set browser "elinks %u"
# macro v set browser "mpv --ytdl-format='bestvideo[height<=?480][fps<=?30]+bestaudio/best' %u" ; open-in-browser ; set browser "elinks %u"
macro v set browser "mpv --ytdl-format='bestvideo[height<=?240][fps<=?30]+worstaudio' %u" ; open-in-browser ; set browser "elinks %u"
# macro v set browser "mpv --ytdl-format='worstvideo+worstaudio' %u" ; open-in-browser ; set browser "elinks %u"

# open audio only
macro A set browser "mpv --ytdl-format='bestaudio' %u --no-video" ; open-in-browser ; set browser "elinks %u"
macro a set browser "mpv --ytdl-format='worstaudio ' --user-agent='Mozilla/5.0 (Windows NT 10.0) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/99.0.4844.84 Safari/537.36' %u --no-video" ; open-in-browser ; set browser "elinks %u"

macro O set browser "$BROWSER %u"; open-in-browser; set browser "elinks %u"

### Colors and Highlights    fg        bg #
color background           default   default

